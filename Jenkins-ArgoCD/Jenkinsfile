pipeline {
    agent any
	tools {
		nodejs 'NodeJS 25.2.1'
	}
	environment {
		DOCKER_HUB_REPO = 'jeffrudy/jenkins_argocd'
        DOCKER_HUB_CREDENTIALS_ID = 'DOCKER_HUB_CREDENTIALS'
        IMAGE_TAG = "${BUILD_NUMBER}"
	}
    stages {
        stage('Build') {
            steps {
          git branch: 'main', credentialsId: 'Git-Ops-Token', url: 'https://github.com/jeff541/devops_project.git'  }
        }
        stage('Install Node Dependencies') {
            steps {
                echo 'Installing Node Dependencies....'
				    dir('Jenkins-ArgoCD') {   
                    sh 'npm install'
                }
            }
        }
        stage('Build the Docker Image') {
            steps {
                echo 'Building the Docker Image....'
				
                        dir('Jenkins-ArgoCD') {   
                script {
                    
                        dockerImage = docker.build("${DOCKER_HUB_REPO}:${IMAGE_TAG}")
                        """
                        echo "Docker Image Built: ${DOCKER_HUB_REPO}:${IMAGE_TAG}"
                        """
                            }
                    }
            }
        }
        stage('Trivy Scan'){
            steps {
                    //    sh 'trivy image jeff541/jenkins_argocd:latest --severity HIGH,CRITICAL --no-progress --format table -o trivy-scan-report.txt'
                sh 'trivy image jeffrudy/jenkins_argocd:${IMAGE_TAG} --skip-db-update --severity HIGH,CRITICAL --no-progress --format table -o trivy-scan-report.txt'
            }
    }
    	stage('Push Image to DockerHub'){
			steps {
				script {
					echo 'pushing docker image to DockerHub...'
					docker.withRegistry('https://registry.hub.docker.com', "${DOCKER_HUB_CREDENTIALS_ID}"){
						dockerImage.push("${IMAGE_TAG}")
						}
					}
				}
			}
            // kubectl apply -n argocd -f https://raw.githubusercontent.com/argoproj/argo-cd/stable/manifests/install.yaml  installs ArgoCD in the argocd namespace
            
            
            // kubectl patch configmap argocd-cmd-params-cm \
            // -n project-1 \
            // --type merge \
            // -p '{"data":{"server.insecure":"true"}}'
    	stage('Install Kubectl & ArgoCD CLI'){
			steps {
				sh '''
				curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
				chmod +x kubectl
                mv kubectl /usr/local/bin/kubectl
				curl -sSL -o /usr/local/bin/argocd https://github.com/argoproj/argo-cd/releases/latest/download/argocd-linux-amd64
				chmod +x /usr/local/bin/argocd
				'''
			    }
		    }
   		stage('Apply Kubernetes Manifests & Sync App with ArgoCD'){
			steps {
			
				script {
				withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG')]) {
					sh '''
						set -e
						export KUBECONFIG=${KUBECONFIG}
						
						# Désactiver l'affichage des commandes pour les opérations sensibles
						set +x
						
						# Récupérer le mot de passe ArgoCD
						ARGOCD_PASSWORD=$(kubectl get secret -n project-1 argocd-initial-admin-secret -o jsonpath="{.data.password}" | base64 -d)
						
						# Connexion à ArgoCD
						argocd login 192.168.49.2:80 \
							--username admin \
							--password "${ARGOCD_PASSWORD}" \
							--insecure \
							--grpc-web > /dev/null 2>&1
						
						# Réactiver l'affichage des commandes
						set -x
						
						# Synchronisation de l'application
						argocd app sync jenkins-argocd
					'''
				}
			}

			}
		}
		}

    
    post {
		success {
			echo 'Build & Deploy completed succesfully!'
		}
		failure {
			echo 'Build & Deploy failed. Check logs.'
		}
	}
}